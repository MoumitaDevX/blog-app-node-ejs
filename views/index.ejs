<%- include('includes/head.ejs') %>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<body>
  <nav class="navbar navbar-dark bg-dark px-4">
    <a class="navbar-brand text-white" href="/blogs">Blog App</a>
    <a class="btn btn-light" href="/blogs/new">+ Create Blog</a>
  </nav>

  <div class="container mt-4">
    <div class="row">
      <% blogs.forEach(blog => { %>
        <div class="col-md-4 mb-3">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title"><%= blog.title %></h5>
              <p class="card-text"><%= blog.content.slice(0, 100) %>...</p>
              <a href="/blogs/<%= blog.id %>" class="btn btn-primary">Read</a>
              <a href="/blogs/<%= blog.id %>/edit" class="btn btn-warning">Edit</a>
              <form action="/blogs/<%= blog.id %>/delete" method="POST" class="d-inline">
                <button type="submit" class="btn btn-danger">Delete</button>
              </form>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
